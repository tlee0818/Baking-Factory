
<% unless @previous_prices.empty? %>
  <div class="card">
    <div class="card-content">
      <span class="card-title">Price History</span>
      <table class="striped highlight">
      <thead>
        <th>Date</th>
        <th class="align_right">Price</th>
      </thead>
        <% for price in @previous_prices %>
          <tr>
            <td><%= price.start_date.strftime("%b %d, %Y") %></td>
          <td class="align_right"><%= number_to_currency(price.price) %></td>
          </tr>
        <% end %>
    </table>
    </div>
    <% if can? :new, ItemPrice %>
      <div class="card-action">
        <%= link_to "Add a new price", new_item_price_path(item_id: @item.id) %>
      </div>
    <% end %>
  </div>
<% else %>
  <% if can? :new, ItemPrice %>
    <div class="card grey lighten-3">
      <div class="card-action">
        <%= link_to "Add a new price", new_item_price_path(item_id: @item.id) %>
      </div>
    </div>
  <% end %>
<% end %>