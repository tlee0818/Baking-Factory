<nav id="nav">
  <div class="container">
    <ul class="left hide-on-med-and-down">
      <% if can? :read, Customer %>
        <li><%= link_to 'Customers', customers_path %></li>
      <% end %>
      <% if can? :read, Address %>
        <li><%= link_to 'Addresses', addresses_path %></li>
      <% end %>
      <% if can? :read, Item %>
        <li><%= link_to 'Items', items_path %></li>
      <% end %>
      <% if can? :read, Order &&  (logged_in? && current_user.role != 'shipper')%>
        <li><%= link_to 'Orders', orders_path %></li>
      <% end %>
      <% if logged_in? && current_user.role == 'baker'%>
        <li><%= link_to 'To Bake', items_path %></li>
      <% end %>
      <% if logged_in? && current_user.role == 'shipper'%>
        <li><%= link_to 'To Ship', items_path %></li>
      <% end %>

      
      <% if can? :read, User %>
        <li><%= link_to 'Users', users_path %></li>
      <% end %>
    </ul>
    <ul class="right">
      <li><%= link_to 'Logout', logout_path %></li>
    </ul>
  </div>
</nav>